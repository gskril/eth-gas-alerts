---
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Human-readable scale for Ethereum gas prices' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" type="image/png" sizes="64x64" href="/favicon-64.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />

    <meta property="twitter:creator" content="@gregskril" />
    <meta property="twitter:card" content="summary_large_image" />
  </head>
  <body class="min-h-svh flex flex-col items-center justify-between px-5 py-6 sm:px-8 sm:py-8 gap-12 sm:gap-16 relative overflow-x-hidden">
    <!-- Dot texture -->
    <div class="fixed inset-0 pointer-events-none" style={`opacity: var(--dot-opacity); background-image: radial-gradient(circle at 1px 1px, var(--dot-color) 1px, transparent 0); background-size: 32px 32px;`}></div>

    <!-- Ambient glow -->
    <div class="fixed top-0 left-1/2 -translate-x-1/2 w-[500px] h-[200px] pointer-events-none" style={`opacity: var(--glow-opacity); background: radial-gradient(ellipse at center, #818cf8, transparent 70%);`}></div>

    <slot />
  </body>
</html>
