---
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Human-readable scale for Ethereum gas prices' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" type="image/png" sizes="64x64" href="/favicon-64.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />

    <meta property="twitter:creator" content="@gregskril" />
    <meta property="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="relative flex min-h-svh flex-col items-center justify-between gap-12 overflow-x-hidden px-5 py-6 sm:gap-16 sm:px-8 sm:py-8"
  >
    <!-- Dot texture -->
    <div
      class="pointer-events-none fixed inset-0"
      style={`opacity: var(--dot-opacity); background-image: radial-gradient(circle at 1px 1px, var(--dot-color) 1px, transparent 0); background-size: 32px 32px;`}
    >
    </div>

    <!-- Ambient glow -->
    <div
      class="pointer-events-none fixed left-1/2 top-0 h-[200px] w-[500px] -translate-x-1/2"
      style={`opacity: var(--glow-opacity); background: radial-gradient(ellipse at center, #818cf8, transparent 70%);`}
    >
    </div>

    <slot />
  </body>
</html>
